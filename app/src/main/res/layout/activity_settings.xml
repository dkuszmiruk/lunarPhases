<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">
    <RadioGroup
            android:layout_width="224dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/radioGroup">
        <RadioButton
                android:text="Simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioSimple" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:text="Conway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioConway" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:text="Trig1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioTrig1" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:text="Trig2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioTrig2" android:layout_weight="1"
                android:textSize="18sp"/>
    </RadioGroup>
    <Button
            android:text="OK"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.791" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintVertical_bias="0.756"
            android:onClick="okClick"/>
</android.support.constraint.ConstraintLayout>